# Usage: Copy this file to .env and update the values
# cp .env.example .env

# Django
SECRET_KEY=your-secret-key-here
DEBUG=True
# Comma-separated list of hostnames/IPs that can access this backend.
# If running in Docker or accessed remotely, add your server's IP or domain (e.g., mysite.com, 192.168.1.100).
ALLOWED_HOSTS=localhost,127.0.0.1
DJANGO_SETTINGS_MODULE=config.settings.development

# Database
DB_NAME=casino_db
DB_USER=casino_user
DB_PASSWORD=casino_password
DB_HOST=localhost
DB_PORT=5432

# Redis
REDIS_URL=redis://localhost:6379/0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# JWT
JWT_ACCESS_TOKEN_LIFETIME=900
JWT_REFRESH_TOKEN_LIFETIME=604800

# Email (SMTP)
EMAIL_HOST=smtp-mail.outlook.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@outlook.com
EMAIL_HOST_PASSWORD=your-email-password

# CORS & CSRF
# These lists must match the protocol + domain + port of your FRONTEND application.
# If your frontend is on http://localhost:3000, keep these defaults.
# If your frontend is hosted elsewhere (e.g. https://my-casino-app.com), add that URL here.
# NOTE: For Docker/Production, 'localhost' will not work for external traffic. Use your real IP or Domain.
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:3000,http://127.0.0.1:8000
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:3000,http://127.0.0.1:8000
CORS_ALLOW_ALL_ORIGINS=False